- model_class = ShareItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:key)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @share_items.each do |share_item|
      %tr
        %td= link_to share_item.id, share_item_path(share_item)
        %td= share_item.name
        %td= share_item.description
        %td= share_item.key
        %td=l share_item.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_share_item_path(share_item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), share_item_path(share_item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_share_item_path, :class => 'btn btn-primary'
