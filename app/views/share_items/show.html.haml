- model_class = ShareItem
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @share_item.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @share_item.description
%p
  %strong= model_class.human_attribute_name(:key) + ':'
  %br
  = @share_item.key

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), share_items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_share_item_path(@share_item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), share_item_path(@share_item), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
