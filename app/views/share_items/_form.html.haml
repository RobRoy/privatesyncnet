= simple_form_for @share_item, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name
  = f.input :description
  = f.input :key
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), share_items_path, :class => 'btn'
